            <script>
                // edit
                document.addEventListener('DOMContentLoaded', function () {
                    const modal = document.getElementById("editaddressModal");
                    const editLinks = document.querySelectorAll('.edit-link');
                    const cancelBtn = document.getElementById("editCancelButton");
                    const saveBtn = document.getElementById("updateButton");

                    // Open the modal when clicking on an edit link
                    editLinks.forEach(link => {
                        link.addEventListener('click', function (event) {
                            event.preventDefault();
                            modal.style.display = "block";  // Open the modal
                        });
                    });

                    // Close the modal when clicking Cancel
                    cancelBtn.addEventListener("click", function () {
                        modal.style.display = "none";  // Close the modal
                    });

                    // Close the modal when clicking Save (just closes, no save logic)
                    saveBtn.addEventListener("click", function () {
                        modal.style.display = "none";  // Close the modal
                    });

                    // Close the modal if clicking outside the modal
                    window.onclick = function (event) {
                        if (event.target == modal) {
                            modal.style.display = "none";  // Close the modal
                        }
                    };
                });

            </script>
